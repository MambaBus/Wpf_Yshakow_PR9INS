<Window x:Class="Wpf_Yshakow_PR9INS.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Yshakow_PR9INS"
        mc:Ignorable="d"
        Title="Варинат 12" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.50*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Height="30" Width="150" FontSize="15">Текст:</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1" Height="30" Width="250" x:Name="t1" Text="Hello world"></TextBlock>
        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" x:Name="t2" FontSize="20"  Margin="5" Height="50" VerticalAlignment="Top"/>
        <Button Grid.Row="1" Content="Начать" Height="50" Width="200" Grid.ColumnSpan="2" Click="Button_Click" />
    </Grid>
</Window>
